# Cloud Deployment Environment Variables Example
# Copy this to .env for cloud deployments (DigitalOcean, AWS, etc.)

# Disable Ollama (not available in cloud environments)
OLLAMA_ENABLED=false

# OpenAI Configuration (recommended for cloud)
OPENAI_ENABLED=true
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_DEFAULT_MODEL=gpt-3.5-turbo
DEFAULT_LLM_PROVIDER=openai

# OR use OpenRouter for access to multiple models
# OPENROUTER_ENABLED=true
# OPENROUTER_API_KEY=your-openrouter-api-key
# OPENROUTER_DEFAULT_MODEL=openai/gpt-3.5-turbo
# DEFAULT_LLM_PROVIDER=openrouter

# Database Configuration
DATABASE_PATH=/app/data/agentic_ai.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Optional: Email Configuration for notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO

# Memory Management
MAX_AGENT_MEMORY_ENTRIES=10
CLEAR_MEMORY_ON_STARTUP=false

# Scheduler
SCHEDULER_INTERVAL=60

# Model Warmup (disable for cloud to save resources)
AUTO_WARMUP_ON_STARTUP=false
MODEL_WARMUP_TIMEOUT=60